  "autoload": {
    "psr-4": {
      "ByJG\\Daemon\\": "src/"
    }
  },
  "bin": [
    "scripts/daemonize"
  ],
  "require": {
    "symfony/console": "^5.4|^6.2|^7.0",
    "php": ">=8.1 <8.4"
  },
  "require-dev": {
    "ext-posix": "*",
    "byjg/restserver": "^5.0",
    "phpunit/phpunit": "^9.6",
    "vimeo/psalm": "^5.9"
  },
  "license": "MIT"
}
